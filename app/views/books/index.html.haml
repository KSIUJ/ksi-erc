%h1 Księgozbiór

= link_to 'Nowy wolumin', new_book_path
%br

%ul
  %li
    = link_to "Autorzy", authors_path
  %li
    = link_to "Wydawnictwa", publishing_houses_path

%table#books
  %thead
    %tr
      %th Author
      %th Title
      %th PublishingHouse
      %th Year
      %th
      %th
      %th

  %tbody
    - @books.each do |book|
      %tr
        %td= book.author==nil ? '--' : book.author.name
        %td= book.title
        %td= book.publishing_house==nil ? '--' : book.publishing_house.name
        %td= book.year
        %td= link_to 'Show', book
        %td= link_to 'Edit', edit_book_path(book)
        %td= link_to 'Destroy', book, :method => :delete, :data => { :confirm => 'Are you sure?' }