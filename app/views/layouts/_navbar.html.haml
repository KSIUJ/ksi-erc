#navbar.navbar.navbar-default
  .container
    .container-fluid
      .navbar-brand
        = link_to image_tag('http://ksi.ii.uj.edu.pl/wp-content/uploads/2015/06/ksi.png', height: '24px')+"KSI ERC", root_path
      %ul.nav.navbar-nav
        - if current_user
          %li
            = link_to "Członkowie", members_path
          %li
            = link_to "Role", roles_path
          %li
            = link_to "Okresy członkostwa", periods_path
          %li
            = link_to "Członkostwa", memberships_path
          %li
            = link_to "Księgozbiór", books_path
          %li
            = link_to "Wypożyczenia", book_leases_path
          %li
            = link_to "Finanse", book_keep_records_path
        - else
          %li
            = link_to 'Księgozbiór', ksiegozbior_path
          %li
            = link_to 'Zaloguj (zarzont)', login_path
      - if current_user
        %ul.nav.navbar-nav.pull-right
          %li.navbar-text
            = current_user.email
          %li
            = link_to 'Wyloguj', logout_path, method: :delete  