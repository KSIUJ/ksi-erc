= form_for @member do |f|
  - if @member.errors.any?
    #error_explanation
      %h2= "Nie można zapisać członka z powodu następujących błędów:"
      %ul
        - @member.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name, "Imię"
    = f.text_field :name
  .field
    = f.label :surname, "Nazwisko"
    = f.text_field :surname
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :card_id, "Identyfikator ELS"
    = f.text_field :card_id
  .actions
    = f.submit 'Zapisz'
