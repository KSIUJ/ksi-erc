= link_to 'Nowy rekord', new_book_keep_record_path, class: "btn btn-default pull-right"
%h1= "Lista rekordów z kategorią #{@book_keep_category}"
= link_to 'Kategorie wydatków', book_keep_categories_path

%table#book_keep_records
  %thead
    %tr
      %th Data
      %th Nazwa
      %th Kategoria
      %th Wartość
      %th Kto dodał
      %th
      %th
      %th

  %tbody
    - @book_keep_records.each do |book_keep_record|
      %tr
        %td= book_keep_record.date
        %td= book_keep_record.name
        %td= book_keep_record.book_keep_category==nil ? "--" : book_keep_record.book_keep_category.name
        %td.val= book_keep_record.show_val
        %td= book_keep_record.user.email
        %td= link_to 'Pokaż', book_keep_record
        %td= link_to 'Edycja', edit_book_keep_record_path(book_keep_record)
        %td= link_to 'Zniszcz', book_keep_record, :method => :delete, :data => { :confirm => 'Jesteś pewien?' }
