%h1 Listing book_leases

%table
  %thead
    %tr
      %th Title
      %th Date start
      %th Date end
      %th Lender
      %th Active?
      %th
      %th
      %th

  %tbody
    - @book_leases.each do |book_lease|
      %tr
        %td= book_lease.book==nil ? '--' : book_lease.book.full_name
        %td= book_lease.date_start
        %td= book_lease.date_end
        %td= book_lease.member==nil ? '--' : book_lease.member.full_name
        %td= format_true_false book_lease.active
        %td= link_to 'Show', book_lease
        %td= link_to 'Edit', edit_book_lease_path(book_lease)
        %td= link_to 'Destroy', book_lease, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Book lease', new_book_lease_path

